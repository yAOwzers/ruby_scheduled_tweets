<h1>Sign Up</h1>

<%= form_with model: @user, url: signUp_path do |form| %>
<div class="mb-3">
  <%= form.label :email %>
  <%= form.text_field :email, class: "form-control", placeholder: "steve@apple.com" %>
</div>
<div class="mb-3">
  <%= form.label :password %>
  <%= form.password_field :password, class: "form-control", placeholder: "passowrd" %>
</div>
<div class="mb-3">
  <%= form.label :password_confirmation %>
  <%= form.text_field :password_confirmation, class: "form-control", placeholder: "password" %>
</div>
<% end %>